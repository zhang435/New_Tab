{
    "manifest_version": 2,
    "name": "New Tab",
    "version": "1.1",
    "description": "A Chrome extension that open all links in the new tab",
    "permissions": [
        "activeTab",
        "tabs",
        "activeTab",
        "http://*/",
        "https://*/",
        "chrome-search://*/",
        "*://*",
        "<all_urls>",
        "webNavigation"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Set this page's color.",
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "scripts": ["add_listener.js",
                    "remove_listener.js",
                    "popup.js"
        ]
    }
}
