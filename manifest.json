{
    "manifest_version": 2,
    "name": "New Tab",
    "version": "1.1",
    "description": "A Chrome extension that open all links in the new tab",
    "permissions": [
        "activeTab",
        "tabs",
        "activeTab",
        "http://*/",
        "https://*/",
        "chrome-search://*/",
        "*://*",
        "webNavigation"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Set this page's color.",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts" : [
        {
            "all_frames" : false,
            "run_at" : "document_end",
            "matches" : [ "http://*/*" ],
            "js" : [
                "addlistener.js"
            ]
        }
    ]
}
